<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Detail Contact</h2>
      <% if (!contact) { %>
      <!-- Seandainya nulis nama sembarang di URL -->
        <div class="alert alert-danger fw-bold" role="alert">
          Data contact tidak ada. <br>
          <a href="/contact" class="alert-link fw-normal">kembali ke daftar contact</a>
        </div>

      <% } else { %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= contact.nama %></h5>
          <h6 class="card-subtitle mb-2 text-body-secondary"><%= contact.noHP %></h6>
          <p class="card-text"><%= contact.email %></p>
          <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge">ubah</a>
          <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('yakin?');">hapus</a>
          <a href="/contact" class="card-link d-block mt-3">&laquo; kembali ke daftar contact</a>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>